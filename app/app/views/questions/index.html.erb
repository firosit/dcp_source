<h1>Listing questions</h1>

<table class="tblQuestion">
  <tr>
    <th>Question</th>
    <th>Answer1</th>
    <th>Answer2</th>
    <th>Answer3</th>
    <th>Answer4</th>
    <th>Correct</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @questions.each do |question| %>
  <tr>
    <td><%= question.description %></td>
    <td><%= question.answer1 %></td>
    <td><%= question.answer2 %></td>
    <td><%= question.answer3 %></td>
    <td><%= question.answer4 %></td>
    <td><%= question.correct %></td>
    <td><%= link_to(image_tag("view.gif"),question)  %></td>
    <td><%= link_to image_tag("edit.png"), edit_question_path(question) %></td>
    <td><%= link_to image_tag("delete.png"), question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

